.sidebar-block
  %h3 Elsewhere
  %ul
    %li= link_to "Twitter", "https://twitter.com/blah"
    %li= link_to "feed", "/feed.xml"

.sidebar-block
  %h3 Recently
  %ul
    - blog.articles[0...10].each do |article|
      %li<
        = link_to article.title, article
        %span.article-date= format_date(article.date)

.sidebar-block
  %h3 Topics
  %ul
    - blog.tags.each do |tag, articles|
      %li<
        = link_to tag, tag_path(tag)
        %span.article-count= "(#{articles.size})"

.sidebar-block
  %h3 By Year
  %ul
    - blog.articles.group_by {|a| a.date.year }.each do |year, articles|
      %li<
        = link_to year, blog_year_path(year)
